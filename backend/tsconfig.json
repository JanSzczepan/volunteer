{
   "compilerOptions": {
      "target": "es5",
      "module": "NodeNext",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"]
   },
   "exclude": ["node_modules", "build"]
}
